<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtopbar"
    tools:context=".model.UserDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_backwarnetdetailuser"
            android:layout_width="60dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:outlineProvider="none">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/backlogo2"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/warnetnameuser"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:fontFamily="@font/megatroncondensed"
            android:textSize="15sp"
            android:text="NET Detail"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/warnetphotouser"
            android:layout_width="280dp"
            android:layout_height="170dp"
            android:src="@drawable/baseline_photo_size_select_actual_24"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="520dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="Location"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/warnetlocationuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12dp"
            android:text="Alamat"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Price List"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/warnetpriceuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12dp"
            android:text="Harga"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="475dp"
        android:layout_marginBottom="330dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Facility"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/warnetfacilityuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12dp"
            android:text="Fasilitas"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="575dp"
        android:layout_marginBottom="220dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="Google Maps"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/warnetmapsuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12dp"
            android:text="Maps"
            android:textColor="@color/white"
            android:autoLink="web"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:gravity="center"
        android:foregroundGravity="center_vertical">

        <Button
            android:id="@+id/btn_mapuserdetail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="View On Map"
            android:backgroundTint="@color/grey"
            android:textColor="@color/white"/>

    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>